.container
  %section.single-contents
    %h2.single-contents__header
      住所入力
    = form_tag '/registration/payment', method: :post, :html=>{class: "single-contents__form", method: :put} do |f|
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :name_address, "お名前", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :last_name_address, "", class: "single-contents__form__content__lower__field", placeholder: "例）山田"
        .single-contents__form__content__lower
          = text_field_tag :first_name_address, "", class: "single-contents__form__content__lower__field", placeholder: "例）彩"
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :name_kana_address, "お名前カナ", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :last_name_kana_address, "", class: "single-contents__form__content__lower__field", placeholder: "例）ヤマダ"
        .single-contents__form__content__lower
          = text_field_tag :first_name_kana_address, "", class: "single-contents__form__content__lower__field", placeholder: "例）アヤ"
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :postal_code, "郵便番号", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :postal_code, "", class: "single-contents__form__content__lower__field", placeholder: "例）123-4567"
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :country_id, "都道府県", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :country_id, "", class: "single-contents__form__content__lower__field", placeholder: "北海道"
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :city, "市区町村", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :city, "", class: "single-contents__form__content__lower__field", placeholder: "例）横浜市緑区"
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :address, "番地", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :address, "", class: "single-contents__form__content__lower__field", placeholder: "例）青山1-1-1"
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :building_name, "建物名", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :building_name, "", class: "single-contents__form__content__lower__field", placeholder: "例）柳ビル103"
      .single-contents__form__content
        .single-contents__form__content__upper
          = label :phone_number, "電話", class: "single-contents__form__content__upper__label"
          .single-contents__form__content__upper__require-icon
            必須
        .single-contents__form__content__lower
          = text_field_tag :phone_number, "", class: "single-contents__form__content__lower__field", placeholder: "例）09012345678"
      = submit_tag "次へ進む", class: "single-contents__form__submit"