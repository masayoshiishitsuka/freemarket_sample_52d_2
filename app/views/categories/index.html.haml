= render 'shared/header'

= render 'shared/breadcrumbs'
  
 

.category-index
  .category-index__body
    .category-index__body__title
      カテゴリー一覧
    .category-index__body__list
      = link_to "レディース", "#", class: "category-index__list__name"
      = link_to "メンズ", "#", class: "category-index__list__name"
      = link_to "ベビー・キッズ", "#", class: "category-index__list__name"
      = link_to "インテイア・住まい・小物", "#", class: "category-index__list__name"
      = link_to "本・音楽・ゲーム", "#", class: "category-index__list__name"
      = link_to "おもちゃ・ホビー・グッズ", "#", class: "category-index__list__name"
      = link_to "コスメ・香水・美容", "#", class: "category-index__list__name"
      = link_to "家電・スマホ・カメラ", "#", class: "category-index__list__name"
      = link_to "スポーツ・レジャー", "#", class: "category-index__list__name"
      = link_to "ハンドメイド", "#", class: "category-index__list__name"
      = link_to "チケット", "#", class: "category-index__list__name"
      = link_to "バイク・オートバイ", "#", class: "category-index__list__name"
      = link_to "その他", "#", class: "category-index__list__name"
    - @parents.each do |parent|
      - children = parent.children
      .category-index__body__box
        .category-index__body__box__part
          = parent.name
        .category-index__body__box__inner
          =link_to "すべて", "#", class: "category-index__body__box__part__inner category-inner-name"
          - children.each do |child|
            .category-index__body__box__inner__sub
              = child.name
              .category-index__body__box__inner__sub__list
                .category-index__body__box__inner__sub__list__box
                  =link_to "すべて", "#", class: "category-index__body__box__part__inner category-inner-list"
                .category-index__body__box__inner__sub__list__box
                  =link_to "Tシャツ/カットソー(半袖/袖なし)", "#", class: "category-index__body__box__part__inner category-inner-list"
                .category-index__body__box__inner__sub__list__box
                  =link_to "Tシャツ/カットソー(七分/長袖)", "#", class: "category-index__body__box__part__inner category-inner-list"
                .category-index__body__box__inner__sub__list__box
                  =link_to "ポロシャツ", "#", class: "category-index__body__box__part__inner category-inner-list"


    .category-index__body__box
      .category-index__body__box__part
        レディース
      .category-index__body__box__inner
        =link_to "すべて", "#", class: "category-index__body__box__part__inner category-inner-name"
        .category-index__body__box__inner__sub
          %p トップス
          .category-index__body__box__inner__sub__list
            =link_to "すべて", "#", class: "category-index__body__box__part__inner category-inner-list"
            =link_to "Tシャツ/カットソー(半袖/袖なし)", "#", class: "category-index__body__box__part__inner category-inner-list"
            =link_to "Tシャツ/カットソー(七分/長袖)", "#", class: "category-index__body__box__part__inner category-inner-list"
            =link_to "ポロシャツ", "#", class: "category-index__body__box__part__inner category-inner-list"
        .category-index__body__box__inner__sub
          %p トップス
          .category-index__body__box__inner__sub__list
            =link_to "すべて", "#", class: "category-index__body__box__part__inner category-inner-list"
            =link_to "Tシャツ/カットソー(半袖/袖なし)", "#", class: "category-index__body__box__part__inner category-inner-list"
            =link_to "Tシャツ/カットソー(七分/長袖)", "#", class: "category-index__body__box__part__inner category-inner-list"
            =link_to "ポロシャツ", "#", class: "category-index__body__box__part__inner category-inner-list"

= render "shared/display_icon"
= render 'shared/footer'
